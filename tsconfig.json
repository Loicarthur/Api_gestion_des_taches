{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",  // Changé de "./src" à "./"
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["jest", "node"]
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
}